<body>
<form class="form-horizontal" method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>PRODUCTS</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" >نام</label>
            <div class="col-md-4">
                <input asp-for="FirstName"  placeholder="نام" class="form-control input-md" required="" type="text">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_name">نام خانوادگی</label>
            <div class="col-md-4">
                <input asp-for="LastName" placeholder="نام خانوادگی" class="form-control input-md" required="" type="text">

            </div>
        </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name_fr">ایمیل</label>
                <div class="col-md-4">
                    <input asp-for="Email" placeholder="ایمیل" class="form-control input-md" required="" type="text">

                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name">نام کاربری</label>
                <div class="col-md-4">
                    <input asp-for="UserName" placeholder="نام کاربری" class="form-control input-md" required="" type="text">

                </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="product_name_fr">شماره تماس</label>
            <div class="col-md-4">
                <input asp-for="PhoneNumber" placeholder="شماره تماس" class="form-control input-md" required="" type="text">

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_name_fr">کد ملی</label>
            <div class="col-md-4">
                <input asp-for="NationalCode" placeholder="کدملی" class="form-control input-md" required="" type="text">

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="available_quantity">شماره شبا</label>
            <div class="col-md-4">
                <input asp-for="ShabaNumber" placeholder="شماره شبا" class="form-control input-md" required="" type="text">

            </div>
        </div>
