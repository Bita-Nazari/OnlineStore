@model List<ProductBoothViewModel>
<body>
    <div class="content">
        <div class="dashboard">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-9">
                        <div class="content-box" style="padding:40px 20px;">

                            <div class="row">

                                <div class="col-12">
                                    <div class="ui-box">
                                        <div class="ui-box-item ui-box-white">
                                            <div class="ui-box-item-title">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h4 class="fw-bold">
                                                        محصولات
                                                    </h4>
                                                </div>
                                            </div>
                                            

                                            @foreach (var item in Model)
                                            {
                                                
                                                <div class="col-lg-9">
                                                    <div class="category-item">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="product-row shadow-box rounded-3 mb-3">
                                                                    <a href="product.html">
                                                                        <div class="product-row-desc justify-content-start">
                                                                            <div class="product-row-desc-item">
                                                                                <div class="product-row-img">
                                                                                    @if (item.Pictures != null && item.Pictures.Any())
                                                                                    {
                                                                                        var firstPicture = item.Pictures.First();
                                                                                        <img src="@Url.Content(firstPicture.Url)" width="150" alt="Auction Image">
                                                                                    }
                                                                                </div>
                                                                                <div class="product-row-title">
                                                                                    <div class="margin-bottom: 10px">
                                                                                        <h6 style="color: hotpink" class="font-16 ">
                                                                                            @item.ProductName
                                                                                        </h6>
                                                                                    </div>



                                                                                    <div class="product-price">

                                                                                        <p style="color: rebeccapurple "> قیمت:</p>
                                                                                        <p style="color: black">@item.NewPrice</p>
                                                                                    </div>

                                                                                    <div class="product-price">

                                                                                        <p style="color: rebeccapurple">غرفه:</p>
                                                                                        <p style="color: black">@item.BoothName </p>
                                                                                    </div>
                                                                                    <a class="btn btn-sm btn-primary" asp-controller="Product" asp-action="Product" asp-route-id="@item.Id">مشاهده کالا</a>

                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                            </div>





                                                        </div>
                                                    </div>
                                                </div>



                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <script src="~/js/jquery-3.6.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/plugin/countdown/countdown.js"></script>
    <script src="~/js/plugin/back-to-top/jquery-backToTop.min.js"></script>
    <script src="~/js/plugin/hint-css/hint-css.js"></script>
    <script src="~/js/jquery-app.js"></script>
    <script src="~/js/plugin/waves/waves.js"></script>
    <script src="~/js/plugin/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
</body>