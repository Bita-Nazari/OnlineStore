@model ProductBoothViewModel
<div class="content" style="padding: 10px 0;">
    <!-- start product meta -->
    <div class="product-meta">

        <div class="summary shadow-sm">
            <div class="row">
                <div class="col-lg-4">
                    <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff"
                         class="swiper product-gallery">


                        <div>
                            <div class="swiper-slide">
                                <div class="swiper-zoom-container">
                                    @foreach(var item in Model.Pictures)
                                    {
                                        <img class="img-fluid" src="@item.Url" />
                                    }
                                   
                                </div>
                            </div>

                        </div>
                        <div class="swiper-button-next d-none d-lg-flex"></div>
                        <div class="swiper-button-prev d-none d-lg-flex"></div>
                        <div class="swiper-pagination d-none d-lg-block"></div>
                    </div>
                    <div thumbsSlider="" class="swiper product-gallery-thumb">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <img class="img-fluid" src="@Model.Product"  />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 border-right-product">
                    <div class="summary-entry mt-lg-0 mt-4">
                        <div class="se-title">
                            <h5>
                                @Model.ProductName
                            </h5>

                        </div>


                    </div>
                    <div class="se-body">
                        <div class="row">
                            <div class="col-lg-6">

                                <div class="se-desc">
                                    <h6>ویژگی محصول:</h6>
                                    <input type="checkbox" class="read-more-state" id="readMore1" />
                                    <ul class="read-more-wrap">
                                        <li>
                                            <p>@Model.Description</p>
                                        </li>

                                    </ul>
                                    <div class="se-cart-price">
                                       
                                        <span class="se-cart-price-new"> @Model.NewPrice</span>
                                    </div>
                                    <br />
                                   
                                    <div class="col-sm-6">
                                        <a asp-controller="Cart" asp-action="AddProduct" asp-route-id="@Model.Id" class="shadow-sm fw-bold btn-add-to-cart mt-sm-0 mt-2 waves-effect waves-light">
                                            افزودن
                                            به سبد
                                            خرید
                                        </a>
                                    </div>
                                    <br />
                                    <div class="se-alert">

                                        <div class="alert alert-info d-flex align-items-center" role="alert">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                                                 fill="currentColor" class="bi bi-bell me-2" viewBox="0 0 16 16">
                                                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z" />
                                            </svg>
                                            <p class="font-14">
                                                بازگشت کالا با دلیل "انصراف از خرید"، فقط در صورت بازنشدن پلمب
                                                کالا امکان‌پذیر است.
                                            </p>
                                        </div>
                                        <div class="free-shipping">
                                            <div class="title">
                                                <h6 class="fw-bold">ارسال رایگان</h6>
                                                <p>
                                                    برای سفارش‌ بالای ۵۰۰ هزار تومان
                                                </p>
                                            </div>
                                            <img src="img/icon-1/free-shipping.svg" alt="" class="img-fluid">
                                        </div>


                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 m-auto mt-lg-2 mt-3">

                                <!--
                                    <div class="se-cart-price">
                                        <div class='countdown' data-date="2028-01-01" data-time="18:30">
                                        </div>
                                    </div>
                                -->


                              @*  <div class="se-cart-form">
                                    <form action="">
                                        <div class="row align-items-center">
                                            <div class="col-sm-6">
                                                <div class="cart-counter">
                                                    <input type="text" name="count" class="counter"
                                                           value="1">
                                                </div>
                                            </div>

                                        </div>
                                    </form>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
