@model List< CommentViewModel>
<body>
    <div class="content">
        <div class="dashboard">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-9">
                        <div class="content-box" style="padding:40px 20px;">

                            <div class="row">

                                <div class="col-12">
                                    <div class="ui-box">
                                        <div class="ui-box-item ui-box-white">
                                            <div class="ui-box-item-title">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h4 class="fw-bold">
                                                        نظرات
                                                    </h4>
                                                </div>
                                            </div>


                                            @foreach (var item in Model)
                                            {

                                                <div class="col-lg-9">
                                                    <div class="category-item">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="product-row shadow-box rounded-3 mb-3">
                                                                    <a href="product.html">
                                                                        <div class="product-row-desc justify-content-start">
                                                                            <div class="product-row-desc-item">

                                                                                <div class="product-row-title">
                                                                                    <div class="margin-bottom: 10px">
                                                                                        <h6 style="color: hotpink" class="font-16 ">
                                                                                            @item.BoothName
                                                                                        </h6>
                                                                                    </div>



                                                                                    <div class="product-price">


                                                                                        <p style="color: black">@item.Text</p>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                            </div>





                                                        </div>
                                                    </div>
                                                </div>



                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <script src="~/js/jquery-3.6.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/plugin/countdown/countdown.js"></script>
    <script src="~/js/plugin/back-to-top/jquery-backToTop.min.js"></script>
    <script src="~/js/plugin/hint-css/hint-css.js"></script>
    <script src="~/js/jquery-app.js"></script>
    <script src="~/js/plugin/waves/waves.js"></script>
    <script src="~/js/plugin/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
</body>
