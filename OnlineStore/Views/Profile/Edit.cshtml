@using OnlineStore.Areas.Admin.Models;
@model AllUserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <link href="~//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="~//code.jquery.com/jquery-1.11.1.min.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>مینی شاپ</title>
    <link rel="shortcut icon" href="~/img/default-icon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/img/default-icon/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/js/plugin/countdown/countdown.css">
    <link rel="stylesheet" href="~/js/plugin/back-to-top/jquery-backToTop.min.css">
    <link rel="stylesheet" href="~/js/plugin/hint-css/hint-css.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
</head>

<!------ Include the above in your HEAD tag ---------->
<body>
    <form class="form-horizontal" method="post">
        <fieldset>

            <!-- Form Name -->
            <legend>@Model.UserName</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">نام</label>
                <div class="col-md-4">
                    <input asp-for="FirstName" placeholder="نام" class="form-control input-md" required="" type="text">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name">نام خانوادگی</label>
                <div class="col-md-4">
                    <input asp-for="LastName" placeholder="نام خانوادگی" class="form-control input-md" required="" type="text">

                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name">نام کاربری</label>
                <div class="col-md-4">
                    <input asp-for="UserName" placeholder="نام کاربری" class="form-control input-md" required="" type="text">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name_fr">شماره موبایل</label>
                <div class="col-md-4">
                    <input asp-for="PhoneNumber" placeholder="شماره موبایل" class="form-control input-md" required="" type="text">

                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name_fr">ایمیل</label>
                <div class="col-md-4">
                    <input asp-for="Email" placeholder="ایمیل" class="form-control input-md" required="" type="text">

                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name_fr">آدرس</label>
                <div class="col-md-4">
                    <textarea asp-for="Address" class="form-control" id="product_name_fr"></textarea>
                </div>
            </div>
            @*            <div class="form-group">
            <label class="col-md-4 control-label" for="available_quantity">رمز عبور</label>
            <div class="col-md-4">
            <input asp-for="Password" name="available_quantity" placeholder="رمز عبور " class="form-control input-md" required="" type="text">

            </div>

            </div>*@

            <!-- Select Basic -->
            <div class="form-group">
                @Html.LabelFor(x => x.CityId, htmlAttributes: new { @class = "col-md-4 control-label" })
                <div class="col-md-4">
                    @Html.DropDownListFor(x => x.CityId, new SelectList(Model.cities, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "Country"})
                    @Html.ValidationMessageFor(x => x.CityId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-4">
                    <button id="singlebutton" name="singlebutton" class="btn btn-warning">ثبت</button>
                </div>
            </div>


            <!-- File Button -->
            @* <div class="form-group">
            <label class="col-md-4 control-label" for="filebutton">main_image</label>
            <div class="col-md-4">
            <input id="filebutton" name="filebutton" class="input-file" type="file">
            </div>
            </div>*@
            <!-- File Button -->
            <!-- Button -->


        </fieldset>
    </form>

    <script src="~/js/jquery-3.6.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/plugin/countdown/countdown.js"></script>
    <script src="~/js/plugin/back-to-top/jquery-backToTop.min.js"></script>
    <script src="~/js/plugin/hint-css/hint-css.js"></script>
    <script src="~/js/jquery-app.js"></script>
    <script src="~/js/plugin/waves/waves.js"></script>
    <script src="~/js/plugin/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>


</body>
</html>

